<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/navigation"
    app:startDestination="@id/contactsFragment">

    <fragment
        android:id="@+id/contactsFragment"
        android:name="com.example.contactsapp.contactsFragment.ContactsListFragment"
        android:label="ContactsFragment" >
        <action
            android:id="@+id/action_contactsFragment_to_addFragment"
            app:destination="@id/addFragment" />
        <action
            android:id="@+id/action_contactsFragment_to_contactDetailFragment"
            app:destination="@id/contactDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/addFragment"
        android:name="com.example.contactsapp.addContactFragment.AddFragment"
        android:label="AddFragment" >
        <action
            android:id="@+id/action_addFragment_to_contactsFragment"
            app:destination="@id/contactsFragment"
            app:popUpTo="@id/contactsFragment" />
    </fragment>
    <fragment
        android:id="@+id/contactDetailFragment"
        android:name="com.example.contactsapp.contactDetailFragment.ContactDetailFragment"
        android:label="ContactDetailFragment" >
        <argument
            android:name="contactId"
            app:argType="long" />
    </fragment>
</navigation>